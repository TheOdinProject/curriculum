<div id="devise-form" class="devise-sign-in">

  <div class="container">
    <h1>Log in</h1>
    <div class="card">
      
    
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" } ) do |f| %>
        <div class="form-inputs">
          <div class="input-group">
            <%= f.input :email, :label => false, :required => false, :autofocus => true, :placeholder => "Email Address", :input_html => { class: 'login email' }%>
          </div>
          <%= f.input :password, :label => false, :required => false, :placeholder =>  "Password", :input_html => { class: 'login password' } %>
        </div>
        <!-- From devise /shared/_links.erb -->
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end -%>
    
        <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
    
        <%= f.button :submit, "Login", :class => "sign-in-button page-buttons login" %>
      <% end %>
      
      <%= render :partial => "shared/github_login_button", :locals => {:screen => "Sign in"} %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

