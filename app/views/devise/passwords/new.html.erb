<div id="devise-form">
  <h2>Forgot your password?</h2>

  <p class="explanation">Enter your email and we'll send you password reset instructions</p>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true %>
    </div>

    <%= f.button :submit, "Send reset instructions", :class => "btn-primary btn-large pull-right" %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>