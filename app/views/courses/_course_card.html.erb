<div class="row">
  <div class="col-xl-10 offset-xl-1">
    <div class="card-main course-card">
      <% if user_signed_in? && course_completed_by_user?(course, current_user) %>
        <div class="course-completion-bar">
          COMPLETED <i class="far fa-check-circle course-completion-bar__icon"></i>
        </div>
      <% end %>

      <div class="course-card-header <%= course_completed_class?(course, current_user) %>">

        <div class='course-card-header__image'>
          <%= render ProgressBadgeComponent.new(
            course: course,
            current_user: current_user,
            modifier: '',
            url: courses_progress_path(course.id)
          )%>
        </div>

        <%= link_to path_course_url(course.path, course), class: 'course-card-header__link' do %>
          <h2 id=<%= course.title.parameterize %> class="course-card-header__title">
            <%= course.title %>
          </h2>
          <span class="course-card-header__sub-title"><%= course.lessons.size %> lessons</span>
        <% end %>

        <%= link_to 'Open Course', path_course_url(course.path, course), class: "button #{open_course_button_style(course, current_user)} course-card-header__button" %>
      </div>

      <div class="course-card__description">
        <p><%= course.description %></p>
      </div>
    </div> <!-- /.course-card -->
  </div> <!-- /.col -->
</div> <!-- /.row -->
