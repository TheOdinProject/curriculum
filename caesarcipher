def caesar_cipher(str, shift)
  caesar = ""
  big_param = ('A'.ord..'Z'.ord)
  small_param = ('a'.ord..'z'.ord)

  str.each_char do |letter|
    if letter =~ /[a-zA-Z]/
      new_pos = letter.ord + shift
      unless new_pos.between?(big_param.min, big_param.max) || new_pos.between?(small_param.min, small_param.max)
        new_pos -= 26
      end
     caesar << new_pos.chr
    else
      caesar << letter
    end
  end
puts caesar
  end

caesar_cipher("Hello, World", 9)
